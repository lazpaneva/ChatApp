@model ChatViewModel

<h3>Messages:</h3>
@{if (Model.Messages == null)
    {
        <p>No message yet!</p>
    } else
    {
        foreach (var mess in Model.Messages)
        {
            <div class="card">
                <div class="body">
                    <h5 class="card-title">@mess.MessageText</h5>
                    <p class="card-text">-- @mess.Sender</p>
                </div>
            </div>
        }

    }
}
<p></p>
<form asp-controller="Chat" asp-action="Send" method="post">
    <div class="form-group row">
        <div class="col-12">
            Send a new maessage
        </div>
        <div class="col-8"> 
            <label>Message: </label>
            <textarea class="form-control" asp-for="CurrentMessage.MessageText" rows="3"></textarea>
        </div>
        <div class="col-4">
            <label>Sender Name:</label>
            <input class="form-control" asp-for="CurrentMessage.Sender">
            <button type="submit" class="btn btn-primary">Send</button>
        </div>
    </div>

</form>